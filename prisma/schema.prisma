generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Motion {
  id           String         @id
  name         String
  description  String         @db.LongText
  createdAt    DateTime
  updatedAt    DateTime
  MotionVoting MotionVoting[]

  @@map("motions")
}

model Request {
  id        String   @id
  method    String
  route     String
  input     String   @db.Text
  output    String   @db.Text
  status    Int
  createdAt DateTime
  updatedAt DateTime

  @@map("requests")
}

model MotionVoting {
  id                 String               @id
  Motion             Motion               @relation(fields: [motionId], references: [id])
  motionId           String
  startVoting        DateTime
  endVoting          DateTime
  createdAt          DateTime
  updatedAt          DateTime
  ResultMotionVoting ResultMotionVoting[]

  @@map("motion_voting")
}

model ResultMotionVoting {
  id             String       @id
  MotionVoting   MotionVoting @relation(fields: [motionVotingId], references: [id])
  motionVotingId String
  memberDocument String
  votingValue    String
  createdAt      DateTime
  updatedAt      DateTime

  @@map("result_motion_voting")
}
