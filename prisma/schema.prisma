generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Motion {
  id            String          @id
  name          String
  description   String          @db.LongText
  createdAt     DateTime
  updatedAt     DateTime
  VotingSession VotingSession[]

  @@map("motions")
}

model Request {
  id        String   @id
  method    String
  route     String
  input     String   @db.Text
  output    String   @db.Text
  status    Int
  createdAt DateTime
  updatedAt DateTime

  @@map("requests")
}

model VotingSession {
  id            String                @id
  Motion        Motion                @relation(fields: [motionId], references: [id])
  motionId      String
  startVoting   DateTime
  endVoting     DateTime
  createdAt     DateTime
  updatedAt     DateTime
  VotingSession ResultVotingSession[]

  @@map("voting_session")
}

model ResultVotingSession {
  id              String        @id
  VotingSession   VotingSession @relation(fields: [votingSessionId], references: [id])
  votingSessionId String
  memberDocument  String
  votingValue     String
  createdAt       DateTime
  updatedAt       DateTime

  @@map("result_voting_session")
}
